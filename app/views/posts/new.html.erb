<h2>Wedding情報登録</h2>

<%= form_with model: @post, url: user_posts_path(@user.id), local: true do |f| %>
  <%#= render "devise/shared/error_messages", resource: @post %>

  <div class="field">
    <%= f.radio_button :attendance, :attend %>
    <%= f.label :attendance, "出席", {value: :attend, style: "display: inline-block;"} %>
    <%= f.radio_button :attendance, :absence %>
    <%= f.label :attendance, "欠席", {value: :absence, style: "display: inline-block;"} %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :name_kana %><br />
    <%= f.text_field :name_kana %>
  </div>

  <div class="field">
    <%= f.check_box 'category_gloom', {:checked => false}, true, false %>
    <%= f.label :category_gloom, "新郎", {value: :true, style: "display: inline-block;"} %>
    <%= f.check_box 'category_bride', {:checked => false}, true, false %>
    <%= f.label :category_bride, "新婦", {value: :true, style: "display: inline-block;"} %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </div>

  <div class="field">
    <%= f.label :departure %><br />
    <%= f.date_field :departure %>
  </div>

  <div class="field">
    <%= f.label :go_home %><br />
    <%= f.date_field :go_home %>
  </div>

  <!--div class="field">
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </div-->

  <div class="field">
    <%= f.label :community %><br />
    <%= f.text_field :community %>
  </div>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </div>

  <div class="actions">
    <%= f.submit "回答する" %>
  </div>

<% end %>