<div id="post_new">
<%= link_to "戻る", user_weddings_path(@user.id) %>

<%= form_with model:@post_form, url: user_posts_path(user_id: @user.id), local: true do |f| %>
  <%#= render "devise/shared/error_messages", resource: @post %>

  出欠
  <div class="field select">
    <%= f.radio_button :attendance, :attend %>
    <%= f.label :attendance, "出席", {value: :attend, style: "display: inline-block;"} %>
    <%= f.radio_button :attendance, :absence %>
    <%= f.label :attendance, "欠席", {value: :absence, style: "display: inline-block;"} %>
  </div>

  <div class="field">
    名前<br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    名前(カタカナ)<br />
    <%= f.text_field :name_kana %>
  </div>

  招待分類<br/>
  <div class="field select">
    <%= f.check_box 'category_gloom', {:checked => false}, true, false %>
    <%= f.label :category_gloom, "新郎", {value: :true, style: "display: inline-block;"} %>
    <%= f.check_box 'category_bride', {:checked => false}, true, false %>
    <%= f.label :category_bride, "新婦", {value: :true, style: "display: inline-block;"} %>
  </div>

  <div class="field">
    住所<br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    メールアドレス<br />
    <%= f.text_field :mail %>
  </div>

  <div class="field">
    出発日<br />
    <%= f.date_field :departure %>
  </div>

  <div class="field">
    帰宅日<br />
    <%= f.date_field :go_home %>
  </div>

  <div class="field">
    メッセージ<br />
    <%= f.text_field :message %>
  </div>

  <div class="field">
    下記よりコミュニティーを選択してください<br />
    <div class="all-community">
      / <% @communities.each do |community| %>
          <%= community.community_name %> /
      <% end %>
    </div><br/>
    <%= f.text_field :tag_name, placeholder:",で区切ってください" %>
  </div>

  <div class="actions">
    <%= f.submit "回答する" %>
  </div>

<% end %>

</div>